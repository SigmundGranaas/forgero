{
  "schemaVersion": 1,
  "id": "forgero-fabric-core",
  "version": "${version}",
  "name": "Forgero for Fabric",
  "description": "Equipment crafting expansion mod for Fabric!",
  "authors": [
    "Sigmund Granaas Sandring"
  ],
  "contributors": [
    "Aulluna",
    "Rad233",
    "identithree",
    "macaroni0423",
    "Steveplays28"
  ],
